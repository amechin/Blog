{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
<div class="container">
    <div class="row py-5">
        <div class="col">
            <h1>Tag</h1>
        </div>
    </div>
    <div class="row pb-5">
        <div class="col">
            <table class="table table table-sm table-hover table-dark">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ tag.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ tag.name }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-sm table-hover table-success">
                <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">article</th>
                    <th scope="col">content</th>
                </tr>
                </thead>
                <tbody>
                {% for article in tag.articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.content }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


    </br>
    <div class="row">





        <a href="{{ path('tag_index') }}">back to list</a>

        <a href="{{ path('tag_edit', {'id': tag.id}) }}">edit</a>

        {{ include('tag/_delete_form.html.twig') }}

</div>

{% endblock %}
